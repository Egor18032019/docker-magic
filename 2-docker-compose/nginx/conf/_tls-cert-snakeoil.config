### _tls-cert-snakeoil.conf ###
#   Self signed certificates generated by the ssl-cert package:
# sudo apt-get install ssl-cert
# sudo make-ssl-cert generate-default-snakeoil --force-overwrite
# sudo usermod --append --groups ssl-cert yyoouu
# ls -l /etc/ssl/certs/ssl-cert-snakeoil.pem /etc/ssl/private/ssl-cert-snakeoil.key
#ssl_certificate     /etc/ssl/certs/ssl-cert-snakeoil.pem;
#ssl_certificate_key /etc/ssl/private/ssl-cert-snakeoil.key;

# cp /etc/ssl/certs/ssl-cert-snakeoil.pem /etc/nginx/conf.d/_tls-cert-snakeoil.pem
# cp /etc/ssl/private/ssl-cert-snakeoil.key /etc/nginx/conf.d/_tls-cert-snakeoil.key
ssl_certificate     /etc/nginx/conf.d/_tls-cert-snakeoil.pem;
ssl_certificate_key /etc/nginx/conf.d/_tls-cert-snakeoil.key;
